
{
  "openapi": "3.1.0",
  "info": {
    "title": "Fashion Store API",
    "description": "API for managing fashion store inventory and shopping cart with JWT Bearer authentication.",
    "version": "v1.0.0"
  },
  "servers": [
    {
      "url": "https://app-web-5bvhvhsyujn6y.azurewebsites.net"
    }
  ],
  "security": [
    {
      "BearerAuth": []
    }
  ],
  "paths": {
    "/api/inventory": {
      "get": {
        "summary": "Get All Inventory",
        "description": "Retrieves all inventory items with size availability.",
        "operationId": "GetInventory",
        "tags": ["Inventory"],
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/InventoryItem"
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - missing or invalid token"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "apiKey",
        "name": "Authorization",
        "in": "header",
        "description": "JWT Bearer token. Format: Bearer {token}"
      }
    },
    "schemas": {
      "InventoryItem": {
        "type": "object",
        "properties": {
          "productId": {
            "type": "integer",
            "description": "Unique product identifier"
          },
          "name": {
            "type": "string",
            "description": "Product name"
          },
          "price": {
            "type": "number",
            "format": "double",
            "description": "Product price"
          },
          "sizeInventory": {
            "type": "object",
            "additionalProperties": {
              "type": "integer"
            },
            "description": "Available quantities by size (e.g., S: 10, M: 15, L: 8)"
          }
        }
      }
    }
  }
}
  